<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Penggajian BM</title>
    <link rel="stylesheet" href="/css/main.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:wght@500&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <!-- <h1 class="bg-warning p-4 text-white">
      <a href="#" class="btn btn-warning badge">
        <i class="bi bi-pencil-square"></i>Penggajian BM</a
      >
    </h1> -->
    <%- include('partials/navbar.ejs') %>
    <div class="container-fluid">
      <div class="container my-5 col-md-7">
        <table class="table table-hover table-light">
          <thead>
            <tr class="text-center">
              <th>Nama Asisten</th>
              <th>Jumlah Masuk (hari)</th>
              <th>Jam Kerja (jam)</th>
              <th>Jumlah siswa</th>
              <th>Kunci (halaman)</th>
              <th>Ketik (halaman)</th>
              <th>Quiziz</th>
              <th>Lain-lain</th>
              <th>Detail</th>
            </tr>
          </thead>
          <tbody>
            <% Object.keys(persons).forEach(function(nama) { %>
            <tr class="text-center" href="/detailAsisten/<%= nama%>">
              <td><%= nama %></td>
              <td><%= persons[nama].jumlah_masuk %></td>
              <td><%= persons[nama].jam_kerja %></td>
              <td><%= persons[nama].siswa %></td>
              <td><%= persons[nama].halaman_kunci %></td>
              <td><%= persons[nama].halaman_ketik %></td>
              <td><%= persons[nama].quiziz %></td>
              <td class="wordBound"><%= persons[nama].lain_lain %></td>

              <td>
                <a
                  href="/detailAsisten/<%= nama%>"
                  class="btn btn-warning badge"
                >
                  <i class="bi bi-pencil-square"></i>Detail</a
                >
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
