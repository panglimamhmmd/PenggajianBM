<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <title>Detail <%= head %></title>
        <link rel="stylesheet" href="/css/main.css" />
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
            crossorigin="anonymous"
        />
    </head>
    <body>
        <%- include('partials/navbar.ejs') %>
        <div class="container">
            <div class="rounded-3">
                <div class="container-fluid py-2">
                    <h1 class="display-5 fw-bold">Penggajian <%= head %></h1>
                    <p class="col-md-8 fs-4"></p>
                </div>
            </div>
            <div class="container-fluid">
                <div class="container col-md-8">
                    <!-- tabel detail -->
                    <table class="table table-hover table-light">
                        <thead>
                            <tr>
                                <th scope="col">Hari Masuk</th>
                                <th scope="col">Durasi Mengajar</th>
                                <th scope="col">Jumlah Siswa</th>
                                <th scope="col">Halaman Kunci</th>
                                <th scope="col">Halaman Ketik</th>
                                <th scope="col">Quiziz</th>
                                <th scope="col">Lain-Lain</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr class="accumulator">
                                <td><%= nama[0].jumlah_masuk %></td>
                                <td><%= nama[0].jam_kerja %></td>
                                <td><%= nama[0].siswa %></td>
                                <td><%= nama[0].halaman_kunci %></td>
                                <td><%= nama[0].halaman_ketik %></td>
                                <td><%= nama[0].quiziz %></td>
                                <td><%= nama[0].lain_lain %></td>
                                <td></td>
                            </tr>
                        </tbody>
                    </table>
                    <!-- tabel detail -->

                    <!-- ! div perhitungan -->
                    <div class="perhitungan" id="loadField">
                        <div class="row">
                            <div class="col-md-12" id="fieldCountGaji">
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th scope="col">Jenis</th>
                                            <th scope="col">Detail</th>
                                            <th scope="col">Rate</th>
                                            <th scope="col">Hasil</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <th scope="row">Transport</th>
                                            <td><%= data[0].jumlah_masuk %></td>
                                            <td><%= data[1].transport %></td>
                                            <td><%= data[2].transport %></td>
                                        </tr>
                                        <tr>
                                            <th scope="row">Jam Kerja</th>
                                            <td><%= data[0].jam_kerja %></td>
                                            <td><%= data[1].perJam %></td>
                                            <td><%= data[2].perJam %></td>
                                        </tr>
                                        <tr>
                                            <th scope="row">Siswa</th>
                                            <td><%= data[0].siswa %></td>
                                            <td><%= data[1].perSiswa %></td>
                                            <td><%= data[2].perSiswa %></td>
                                        </tr>
                                        <tr>
                                            <th scope="row">Halaman Ketik</th>
                                            <td>
                                                <%= data[0].halaman_ketik %>
                                            </td>
                                            <td><%= data[1].hlmnKetik %></td>
                                            <td><%= data[2].hlmnKetik %></td>
                                        </tr>
                                        <tr>
                                            <th scope="row">Halaman Kunci</th>
                                            <td>
                                                <%= data[0].halaman_kunci %>
                                            </td>
                                            <td><%= data[1].hlmnKunci %></td>
                                            <td><%= data[2].hlmnKunci %></td>
                                        </tr>
                                        <tr>
                                            <th scope="row">Quiziz</th>
                                            <td><%= data[0].quiziz %></td>
                                            <td><%= data[1].hlmnQuiziz %></td>
                                            <td><%= data[2].hlmnQuiziz %></td>
                                        </tr>
                                        <tr>
                                            <th scope="row">Kinerja</th>
                                            <th colspan="2">
                                                <div class="input-group">
                                                    <input
                                                        type="text"
                                                        class="form-control"
                                                        placeholder="ex. 125000"
                                                        id="kinerjaInput"
                                                        required
                                                    />
                                                    <div
                                                        class="input-group-append"
                                                    >
                                                        <button
                                                            class="btn btn-outline-secondary"
                                                            type="button"
                                                            id="kinerja"
                                                        >
                                                            Add
                                                        </button>
                                                    </div>
                                                </div>
                                            </th>
                                            <td id="kinerjaTarget">10000</td>
                                        </tr>
                                        <tr>
                                            <th scope="row">Total</th>
                                            <td colspan="2"></td>
                                            <th id="totalGaji">
                                                <%= data[2].total %>
                                            </th>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>

                            <!-- <div class="col-md-10" id="perhitungan"></div> -->
                            <!-- ! div perhitungan -->
                        </div>
                    </div>

                    <div class="buttonGroup mb-5">
                        <a href="#" class="btn btn-warning badge">
                            <i class="bi bi-pencil-square"></i>Cetak Slip
                            Gaji</a
                        >
                        <a href="/" class="btn btn-secondary badge">
                            <i class="bi bi-pencil-square"></i>Kembali</a
                        >
                    </div>
                </div>
            </div>
        </div>

        <script src="/js/index.js"></script>

        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
            crossorigin="anonymous"
        ></script>
    </body>
</html>
